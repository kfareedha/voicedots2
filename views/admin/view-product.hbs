            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.productname}} </td>
                    <td>{{this.productdescription}} </td>
                    
                    <td>
                        {{#each productimage}}
                        {{#if @first}}
                        <img width="50px" height="50px" src="/images/productimg/{{this}}" alt="">
                        {{/if}}
                        {{/each}}
                         </td>
                    <td>{{this.productcategory}} </td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you sure to delete {{this.Name}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

