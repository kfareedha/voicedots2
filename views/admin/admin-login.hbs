 

         <div class="container ">
  <div class="row mt-5" style="margin-top:auto">
    <div class="col-md-5 mx-auto">
      <div id="first">
        <div class="myform form ">
          <div class="logo mb-3">
            <div class="col-md-12 text-center">
              <h2>Admin &nbsp;&nbsp;
                    <span class="text-primary font-weight-bold border px-3 mr-1">V</span> voicedots.</h2>
            </div>
          </div>
          <form id="adminlogin" action="/admin/login" method="post">
          <div class="text-danger">
          {{#if adminLoginErr}}
          <p class="text-danger">Invalid Username or Password</p>
          {{/if}}
          </div>

          
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
                placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Password</label>
              <input type="password" name="password" id="password" class="form-control" aria-describedby="emailHelp"
                placeholder="Enter Password">
            </div>


          

            <div class="col-md-12 text-center ">
              <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm mt-4">Login</button>
            </div>
          </form>

          

        </div>
      </div>
    </div>
  </div>
</div>
<link rel="stylesheet" href="stylesheets/login.css" type="text/css">
<script>

  $("#userlogin").validate({
    errorClass:"validerror",
    rules: {
      email: {
        required: true,
        email: true
      },
      password: {
        required: true,
        minlength: 6
      }
    }
  });


      

</script>
<script>
$("#loginotp").validate({
      rules:{
        mobileotp:{
          required:true
          
        }
      }
      })
      </script>