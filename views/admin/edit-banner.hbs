<section>
  <div class=" container row">
    <div class="ml-5 col-md-6">
      <h2 class="text-center mt-5">Edit Banner</h2>
      
    
        
      <form action="/admin/edit-banner" method="post" enctype="multipart/form-data">
      


      <input type="text" name="id" class="invisible" value="{{banner._id}}" id="id">
        <label for="bannerimage">Banner Image</label>
        
        <input type="file" name="bannerimage" class="form-control" value="{{banner.bannerimage}}">

        <label for="banner">Title</label>
        <input type="text" name="title" class="form-control" value="{{banner.title}}">
        <label for="productdescription" >Caption</label>
        <input type="text" name="caption" class="form-control"  value="{{banner.caption}}"  >
        <label for=""> Category</label>
        <select type="select" name="category" class="form-control" >
          {{#each categories}}
          <option value="{{this.categoryname}}">{{this.categoryname}}</option>
          {{/each}}
        </select>
          
        
          
      
      

        <button type="submit" class="btn btn-success mt-4">Submit</button>

      </form>
    </div>
  </div>
