<div class="container-fluid pt-5">
      <form class=" mx-auto border p-3" action="/add-address" method="post" id="address">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div class="mb-4">
                <h4 class="font-weight-semi-bold mb-4">Add Address</h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label> Name</label>
                        <input class="form-control" type="text" placeholder="Name" name="name" id="name">
                    </div>

                    <div class="col-md-6 form-group">
                        <label>E-mail</label>
                        <input class="form-control" type="text" placeholder="example@email.com" name="email" id="email">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Mobile No</label>
                        <input class="form-control" type="text" placeholder="+123 456 789" name="mobile" id="mobile">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Address Line 1</label>
                        <input class="form-control" type="text" placeholder="Street"name="adress1" id="address1">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Address Line 2</label>
                        <input class="form-control" type="text" placeholder=" Street"name="address2" id="address2">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Country</label>
                        <input class="form-control" type="text" placeholder=" country"name="country" id="country">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>City</label>
                        <input class="form-control" type="text" placeholder="Calicut"name="city" id="city">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>State</label>
                        <input class="form-control" type="text" placeholder="Kerala"name="state" id="state">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>PIN Code</label>
                        <input class="form-control" type="text" placeholder="123"name="pincode" id="pincode">
                    </div>

                    <div class="col-sm-4 text-secondary">
									<button type='submit' class="btn btn-outline-primary">Save Address</button>
								</div>
                </div>
                </form>
            </div>
            <script>

  $("#address").validate({
    errorClass:"validerror",
    rules: { name: {
        required: true,
        
      },

      email: {
        required: true,
        email: true
      },
       mobile: {
        required: true,
        minlength:10
      },
       address1: {
        required: true,
        
      },
      address2: {
        required: true,
        
      },
      country: {
        required: true,
        
      },
      city: {
        required: true,
        
      },
      state: {
        required: true,
        
      },
      pincode: {
        required: true,
        minlength: 6
      }
    }
  });


      

</script>